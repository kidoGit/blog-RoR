<h1>Blog Posts</h1>
<% @posts.each do |post| %>
    <div class="card bg-light" style="margin-bottom:20px;">
        <div class="card-body">
            <h3> <%= post.title %> </h3>
            <p> <%= post.body %> </p>
            <%= link_to "Read More", post_path(post), :class => 'btn btn-info' %>
        </div>
    </div>
<% end %>