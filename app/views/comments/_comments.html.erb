<h3>Comments</h3>
<% @post.comments.each do |comment| %>
    <div class="card bg-light" style="margin-bottom: 20px;">
        <div class="card-body">
            <p><strong> <%= comment.username %> </strong>: <%= comment.body %>
            <%= link_to '[X]', [comment.post, comment], method: :delete, data: {confirm: 'Are you sure?'} %></p>
        </div>
    </div>
<% end %>